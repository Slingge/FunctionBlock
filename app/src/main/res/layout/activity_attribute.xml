<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_title" />
    <!--    <slingge.functionblock.ui.animGraphical.MyAnimView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="测试"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <slingge.functionblock.customView.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/but1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="透明度"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/but2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旋转"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/but3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平移"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/but4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缩放"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/but5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组合动画"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/but6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滑动"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </slingge.functionblock.customView.FlowLayout>


            <slingge.functionblock.ui.animGraphical.graphical.Graphical
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="60dp" />

            <slingge.functionblock.ui.animGraphical.graphical.FrameTextView
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="带边框的TextViw"
                android:gravity="center"
android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>