<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slingge.functionblock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--布局-->
        <activity android:name=".ui.layout.LayoutViewActivity" />
        <!--卡片布局-->
        <activity android:name=".ui.layout.CardViewLayout" />
        <!--滑动隐藏显示标题、导航-->
        <activity android:name=".ui.layout.SlidingHideBarLayout" />


        <!--RecyclerView-->
        <activity android:name=".ui.recyclerView.RecyclerViewActivity" />

        <!-- 带HeaderView的分页加载LinearLayout RecyclerView-->
        <activity android:name=".ui.recyclerView.EndlessLinearLayoutActivity" />


    </application>

</manifest>